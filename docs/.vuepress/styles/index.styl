.theme-default-content code  
  padding .1rem 0.4rem
  color #d32a55  

/*********** table-flex *************/

.flex 
  display flex
  align-items flex-start

.table-scroll
  overflow-x scroll

/************ copy ************/

.code-copy-added
  background transparent !important
  .code-copy
    position absolute
    top 0
    left 0
    right 0
    svg
      position absolute
      right 40px
      top 10px
      opacity 1 !important
      width 16px
      height 16px
      & + span
        position absolute
        top 8px
        right 60px

.demo-code-content-copy
  display none // 隐藏插件 @vuepress-reco/extract-code 的复制效果

/*******************************/

.navbar 
  white-space nowrap

._wechat 
  position relative
  display inline-block
  margin-left 20px
  font-weight 600
  color #0285e3
  cursor pointer

._wechat .icon-weixin
  color: #28c445

._wechat ._wechat-img 
  width 160px
  height 160px
  position absolute
  display none
  justify-content center
  align-items center
  background-color #fff
  box-shadow 0 1px 10px 0 #d0bfbf
  border-radius 10px

._wechat ._wechat-img img
  width 90%
  height 90%

.content__footer a
  font-weight normal
  color #4e6e8e

